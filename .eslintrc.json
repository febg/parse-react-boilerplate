{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-filename-extension": "off",
        "import/no-extraneous-dependencies": [
            "error",{
                "packageDir": ["./web_client/", "./parse_server"],
                "devDependencies": false, 
                "optionalDependencies": false
            }
        ],
        "no-async-promise-executor": "off"
    }
}
